<Window x:Class="roz2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:roz2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="75,50,0,0" VerticalAlignment="Top" Width="135" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Height="60" Click="btnStart_Click" IsEnabled="False"/>
        <Button x:Name="btnTime" Content="Czas" HorizontalAlignment="Left" Margin="75,150,0,0" VerticalAlignment="Top" Width="135" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Height="60" MouseEnter="btnTime_MouseEnter" MouseLeave="btnTime_MouseLeave"/>
        <Button x:Name="btnEnable" Content="Aktywuj" HorizontalAlignment="Left" Margin="75,249,0,0" VerticalAlignment="Top" Width="135" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Height="60" MouseEnter="btnTime_MouseEnter" MouseLeave="btnTime_MouseLeave" Click="btnEnable_Click"/>


    </Grid>
</Window>
