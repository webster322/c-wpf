<Window x:Class="roz2zad5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:roz2zad5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Czy chcesz podwyżkę?" HorizontalAlignment="Left" Margin="175,30,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnYes" Content="Tak" HorizontalAlignment="Left" Margin="160,220,0,0" VerticalAlignment="Top" Width="75" Click="btnYes_Click" MouseEnter="btnYes_MouseEnter"/>
        <Button x:Name="btnNo" Content="Nie" HorizontalAlignment="Left" Margin="245,220,0,0" VerticalAlignment="Top" Width="75" Click="btnNo_Click"/>

    </Grid>
</Window>
